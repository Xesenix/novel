{
	"name": "novel",
	"version": "0.0.1",
	"license": "MIT",
	"main": "server.js",
	"scripts": {
		"ng": "ng",
		"start": "ng serve --bh /",
		"serve:app:pl": "ng serve --aot --app app --i18n-format xlf --i18n-file src/app/locale/messages.pl.xlf --locale pl",
		"serve:app:en": "ng serve --aot --app app --i18n-format xlf --i18n-file src/app/locale/messages.en.xlf --locale en",
		"serve:xes:pl": "ng serve --app xes --i18n-format xlf --i18n-file src/app/locale/messages.pl.xlf --locale pl",
		"serve:xes:en": "ng serve --app xes --i18n-format xlf --i18n-file src/app/locale/messages.en.xlf --locale en",
		"build": "npm run build:app",
		"build:app": "ts-node scripts/build.langs.ts --app app --langs \"pl en\"",
		"build:xes": "ts-node scripts/build.langs.ts --app xes --langs \"pl en\"",
		"analyze": "webpack-bundle-analyzer dist/app/en/stats.json",
		"test": "npm run test:app && npm run test:xes",
		"test:app": "ng test --app app --code-coverage",
		"test:xes": "ng test --app xes --code-coverage",
		"lint": "ng lint",
		"e2e": "ng e2e",
		"postinstall": "npm run build",
		"xi18n": "npm run xi18n:app",
		"xi18n:app": "ng xi18n --progress --i18n-format xlf --out-file messages.xliff --app app --output-path src/app/locale --locale en && xliffmerge --profile src/xliffmerge.app.json",
		"xi18n:xes": "ng xi18n --progress --i18n-format xlf --out-file messages.xliff --app xes --output-path src/xes/locale --locale en && xliffmerge --profile src/xliffmerge.xes.json",
		"precommit": "ng lint && lint-staged",
		"prepush": "ng test --progress false --watch false"
	},
	"lint-staged": {
		"{src,scripts}/**/*.ts": [
			"prettier --write --use-tabs --parser typescript",
			"git add"
		]
	},
	"private": true,
	"dependencies": {
		"@angular/animations": "^6.0.0-beta.1",
		"@angular/cli": "^1.7.0-beta.2",
		"@angular/common": "^6.0.0-beta.1",
		"@angular/compiler": "^6.0.0-beta.1",
		"@angular/compiler-cli": "^6.0.0-beta.1",
		"@angular/core": "^6.0.0-beta.1",
		"@angular/forms": "^6.0.0-beta.1",
		"@angular/http": "^6.0.0-beta.1",
		"@angular/platform-browser": "^6.0.0-beta.1",
		"@angular/platform-browser-dynamic": "^6.0.0-beta.1",
		"@angular/router": "^6.0.0-beta.1",
		"@angular/service-worker": "^6.0.0-beta.1",
		"@ngrx/effects": "^4.1.1",
		"@ngrx/store": "^4.1.1",
		"@pixi/filter-bulge-pinch": "^2.3.0",
		"bootstrap-sass": "^3.3.7",
		"core-js": "^2.4.1",
		"express": "^4.16.2",
		"ng2-dragula": "^1.5.0",
		"ngrx-store-localstorage": "^0.2.4",
		"pixi.js": "^4.7.0",
		"rxjs": "^5.5.2",
		"tslint-language-service": "^0.9.6",
		"webpack-bundle-analyzer": "^2.9.0",
		"webpack-stats-plugin": "^0.1.5",
		"xes-ngrx-undo": "^1.0.1",
		"xes-rx-tween": "^0.1.0",
		"zone.js": "^0.8.18"
	},
	"devDependencies": {
		"@angular/language-service": "^5.0.0",
		"@ngrx/store-devtools": "^4.0.0",
		"@types/express": "^4.0.39",
		"@types/jasmine": "~2.5.53",
		"@types/jasminewd2": "~2.0.2",
		"@types/node": "^8.0.47",
		"@types/pixi.js": "^4.5.7",
		"@types/webpack-bundle-analyzer": "^2.9.0",
		"args": "^3.0.7",
		"codelyzer": "^3.1.2",
		"husky": "^0.14.3",
		"jasmine-core": "~2.6.2",
		"jasmine-spec-reporter": "~4.1.0",
		"karma": "~1.7.0",
		"karma-chrome-launcher": "~2.1.1",
		"karma-cli": "~1.0.1",
		"karma-coverage-istanbul-reporter": "^1.2.1",
		"karma-jasmine": "~1.1.0",
		"karma-jasmine-html-reporter": "^0.2.2",
		"lint-staged": "^4.3.0",
		"ngx-i18nsupport": "^0.8.8",
		"protractor": "~5.1.2",
		"ts-node": "^3.3.0",
		"tslint": "^5.3.2",
		"typescript": "^2.6.1"
	},
	"engines": {
		"node": "~8.4.0",
		"npm": "~5.4.2"
	}
}
