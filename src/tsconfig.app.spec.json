{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"paths": {
			"app/*": ["app/*"],
			"characters/*": ["app/characters/*"],
			"layout/*": ["app/layout/*"],
			"pixi/*": ["app/pixi/*"],
			"story/*": ["app/story/*"]
		},
		"outDir": "../out-tsc/spec",
		"baseUrl": "./",
		"module": "commonjs",
		"target": "es5",
		"types": [
			"jasmine",
			"node"
		]
	},
	"files": [
		"main.ts",
		"polyfills.ts",
		"test.app.ts"
	],
	"include": [
		"app/**/*.spec.ts",
		"app/**/*.d.ts"
	]
}
